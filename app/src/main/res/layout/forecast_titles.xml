<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@+id/time_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:text="Time"
        android:gravity="center"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/temp_title"
        app:layout_constraintStart_toEndOf="@id/empty_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="Temp"
        android:textSize="8sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/chance_title"
        app:layout_constraintStart_toEndOf="@+id/time_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chance_title"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="Chance of Rain"
        android:textSize="8sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/wind_title"
        app:layout_constraintStart_toEndOf="@id/temp_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wind_title"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="8sp"
        android:text="Wind (mph)"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/humidity_title"
        app:layout_constraintStart_toEndOf="@id/chance_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/humidity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="8sp"
        android:text="Humidity"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/wind_title"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>